<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040404">


    <TextView
        android:id="@+id/movieOverviewTitle"
        android:layout_width="333dp"
        android:layout_height="97dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Movie Overview"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/itemRatingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foregroundGravity="center"
        android:numStars="6"
        android:rating="4.5"
        android:theme="@style/RatingBar"
        app:layout_constraintEnd_toEndOf="@id/movieOverviewTitle"
        app:layout_constraintStart_toStartOf="@id/movieOverviewTitle"
        app:layout_constraintTop_toBottomOf="@id/movieOverviewTitle" />

    <TextView
        android:id="@+id/movieOverviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:paddingStart="6dp"
        android:paddingTop="2dp"
        android:paddingEnd="6dp"
        android:paddingBottom="2dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemRatingBar"
        tools:text="TextView" />

    <Button
        android:id="@+id/favorite_button"
        android:layout_width="154dp"
        android:layout_height="51dp"
        android:layout_marginStart="219dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="38dp"
        android:background="#FFFFFF"
        android:backgroundTint="#730808"
        android:text="Add To Favorite!"
        android:textAllCaps="false"
        android:textColor="#F1EEEE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>