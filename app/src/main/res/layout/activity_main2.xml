<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".UI.MainActivity2">

    <TextView
        android:layout_marginBottom="50dp"
        android:id="@+id/movie2_l8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="@color/cardview_light_background"
        android:textSize="14sp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Sign_In"
        app:layout_constraintStart_toStartOf="@id/movie2_l7"
        app:layout_constraintTop_toBottomOf="@id/movie2_l7" />

    <Button
        android:id="@+id/movie2_l6"
        android:layout_width="289dp"
        android:layout_height="47dp"
        android:layout_marginBottom="5dp"
        android:background="#aa1d1d"
        android:clickable="true"
        android:ems="10"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:text="  SIGN UP"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintTop_toBottomOf="@id/movie2_l5"
        app:layout_constraintBottom_toTopOf="@id/movie2_l7"
        app:layout_constraintEnd_toEndOf="@id/movie2_l5"
        app:layout_constraintStart_toStartOf="@id/movie2_l5"
        />

    <EditText
        android:id="@+id/movie2_l5"
        android:layout_width="337dp"
        android:layout_height="53dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/background"
        android:ems="10"
        android:inputType="textVisiblePassword"
        android:paddingStart="12dp"
        android:hint="Confirm Password"
        android:textColorHint="#b3b3b3"
        android:textColor="#b3b3b3"
        app:layout_constraintTop_toBottomOf="@id/movie2_l4"
        app:layout_constraintBottom_toTopOf="@id/movie2_l6"
        app:layout_constraintEnd_toEndOf="@id/movie2_l4"
        app:layout_constraintStart_toStartOf="@id/movie2_l4"
        />

    <EditText
        android:id="@+id/movie2_l4"
        android:layout_width="337dp"
        android:layout_height="53dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background"
        android:ems="10"
        android:inputType="textVisiblePassword"
        android:paddingStart="12dp"
        android:hint="Enter Password"
        android:textColorHint="#b3b3b3"
        android:textColor="#b3b3b3"
        app:layout_constraintTop_toBottomOf="@id/movie2_l3"
        app:layout_constraintBottom_toTopOf="@id/movie2_l5"
        app:layout_constraintEnd_toEndOf="@id/movie2_l3"
        app:layout_constraintStart_toStartOf="@id/movie2_l3"
        />

    <EditText
        android:id="@+id/movie2_l3"
        android:layout_width="337dp"
        android:layout_height="53dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:hint="Enter your email"
        android:textColorHint="#b3b3b3"
        android:textColor="#b3b3b3"
        app:layout_constraintTop_toBottomOf="@id/movie2_l2"
        app:layout_constraintBottom_toTopOf="@id/movie2_l4"
        app:layout_constraintEnd_toEndOf="@id/movie2_l2"
        app:layout_constraintStart_toStartOf="@id/movie2_l2"
        />

    <ImageView
        android:layout_marginBottom="10dp"
        android:id="@+id/movie2_l2"
        android:layout_width="140dp"
        android:layout_height="108dp"
        app:layout_constraintTop_toBottomOf="@id/movie2_l1"
        app:layout_constraintBottom_toTopOf="@id/movie2_l3"
        app:layout_constraintEnd_toEndOf="@id/movie2_l1"
        app:layout_constraintStart_toStartOf="@id/movie2_l1"
        app:srcCompat="@drawable/popcorn_33" />

    <TextView
        android:id="@+id/movie2_l1"
        android:layout_width="401dp"
        android:layout_height="39dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Movie Time"
        android:textColor="#c0c0c0"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/movie2_l2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/movie2_l7"
        android:layout_width="47dp"
        android:layout_height="26dp"
        android:text="-OR-"
        android:textColor="#aa1d1d"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/movie2_l8"
        app:layout_constraintEnd_toEndOf="@id/movie2_l6"
        app:layout_constraintStart_toStartOf="@id/movie2_l6"

        app:layout_constraintTop_toBottomOf="@id/movie2_l6" />

    <TextView
        android:id="@+id/Sign_In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Sign In"
        android:textColor="@color/cardview_light_background"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/movie2_l7"
        app:layout_constraintStart_toEndOf="@id/movie2_l8"
        app:layout_constraintTop_toBottomOf="@id/movie2_l7"
        android:layout_marginEnd="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>